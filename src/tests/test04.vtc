varnishtest "Test rtstatus multiple varnish istances"

server s1 {
	rxreq
	txresp
} -start

varnish v1 -vcl+backend {
	import rtstatus from "${vmod_topbuild}/src/.libs/libvmod_rtstatus.so";

	sub vcl_recv {
		if( req.url ~ "/rtstatus") {
			return(synth(200, "OK"));
		}
	}
	sub vcl_synth {
		if( resp.status == 200) {
			synthetic(rtstatus.rtstatus());
			return(deliver);
		}	
	}
} -start

varnish v2 -vcl+backend {
	import rtstatus from "${vmod_topbuild}/src/.libs/libvmod_rtstatus.so";

	sub vcl_recv {
		if( req.url !~ "/rtstatus") {
			return(synth(503, "KO"));
		}
	}
	sub vcl_synth {
		if( resp.status == 503) {
			set resp.http.Header = "KO";
			return(deliver);
		}	
	}
	
} -start

client c1 {
	txreq -url "/rtstatus"
	rxresp
	expect resp.status == 200
} -start

client c1 -connect ${v2_sock} {
	txreq -url "/rtstati"
	rxresp
	expect resp.status == 503
	expect resp.http.Header == "KO"
} -run

