varnishtest "Test rtstatus multiple varnish instances"

varnish v1 -arg "-i ${tmpdir}/v1" -vcl+backend {
	import rtstatus from "${vmod_topbuild}/src/.libs/libvmod_rtstatus.so";

	backend s1 { .host= "127.0.0.1"; }

	sub vcl_recv {
		if (req.url == "/rtstatus.json") {
			return(synth(200));
		}
	}
	sub vcl_synth {
		if (req.url == "/rtstatus.json") {
			rtstatus.synthetic_json();
			return(deliver);
		}
	}
} -start

varnish v2 -arg "-i ${tmpdir}/v2" -vcl+backend {
	import rtstatus from "${vmod_topbuild}/src/.libs/libvmod_rtstatus.so";

	backend s2 { .host= "127.0.0.1"; }

	sub vcl_recv {
		if (req.url == "/rtstatus.json") {
			return(synth(200));
		}
	}
	sub vcl_synth {
		if (req.url == "/rtstatus.json") {
			rtstatus.synthetic_json();
			return(deliver);
		}
	}
} -start

client c1 {
	txreq -url "/rtstatus.json"
	rxresp
	expect resp.status == 200
	expect resp.http.content-type ~ "application/json"
	expect resp.body ~ "VBE.vcl1.s1.happy"
} -start

client c1 -connect ${v2_sock} {
	txreq -url "/rtstatus.json"
	rxresp
	expect resp.status == 200
	expect resp.http.content-type ~ "application/json"
	expect resp.body ~ "VBE.vcl1.s2.happy"
} -run

