varnishtest "Test rtstatus vmod"

server s1 {
	rxreq
	txresp
} -start

varnish v1 -vcl+backend {
	import rtstatus from "${vmod_topbuild}/src/.libs/libvmod_rtstatus.so";

	sub vcl_recv {
		if (req.url ~ "/rtstatus") {
			return(synth(800, "OK"));
		}
	}
	sub vcl_synth {
		if (resp.status == 800) {
			synthetic(rtstatus.rtstatus(1));
			return(deliver);
		}	
	}
} -start

client c1 {
	txreq -url "/rtstatus"
	rxresp
	expect resp.status == 800
	expect resp.bodylen > 200
} -run


