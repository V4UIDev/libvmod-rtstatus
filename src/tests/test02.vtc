varnishtest "Test rtstatus servers"

server s1 {
	rxreq
	txresp
} -start

server s2 {
	rxreq
	txresp
} -start

varnish v1 -vcl+backend {
	import rtstatus from "${vmod_topbuild}/src/.libs/libvmod_rtstatus.so";
	import directors;

	sub vcl_init {
		new bar = directors.round_robin();
		bar.add_backend(s1);
		bar.add_backend(s2);
	}

	sub vcl_recv {
		if( req.url ~ "/rtstatus") {
			set req.backend_hint = bar.backend();
			return(synth(200, "OK"));
		}
	}
	sub vcl_synth {
		if( resp.status == 200) {
			synthetic(rtstatus.rtstatus());
			return(deliver);
		}
	}
} -start

client c1 {
	txreq -url "/rtstatus"
	rxresp
	expect resp.status == 200		
}
client c1 -run

